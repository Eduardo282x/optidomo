generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Area {
  id         Int          @id @default(autoincrement())
  name       String
  devices    AreaDevice[]
  energyLogs EnergyLog[]
  accessLogs AccessLog[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

enum DeviceType {
  LIGHT
  AC
}

model Device {
  id          Int          @id @default(autoincrement())
  name        String
  type        DeviceType
  powerWatts  Float // Consumo en watts por hora
  areaDevices AreaDevice[]
  energyLogs  EnergyLog[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model AreaDevice {
  id       Int    @id @default(autoincrement())
  name     String
  area     Area   @relation(fields: [areaId], references: [id])
  areaId   Int
  device   Device @relation(fields: [deviceId], references: [id])
  deviceId Int
}

model EnergyLog {
  id        Int       @id @default(autoincrement())
  device    Device    @relation(fields: [deviceId], references: [id])
  deviceId  Int
  area      Area      @relation(fields: [areaId], references: [id])
  areaId    Int
  startedAt DateTime
  endedAt   DateTime? // null mientras est√© encendido
  totalWh   Float? // Consumo en Wh (calculado al apagarse)
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model User {
  id         Int         @id @default(autoincrement())
  fullName   String
  email      String      @unique
  password   String
  role       Role
  accessLogs AccessLog[]
  isPaid     Boolean     @default(true) // Para simular pagos
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

enum AccessType {
  ENTRY
  EXIT
}

model AccessLog {
  id        Int        @id @default(autoincrement())
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  area      Area       @relation(fields: [areaId], references: [id])
  areaId    Int
  type      AccessType
  timestamp DateTime
}
